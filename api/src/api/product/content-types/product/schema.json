{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "short_descripiton": {
      "type": "richtext"
    },
    "long_description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "newArrivals",
        "bestSellers",
        "topRated"
      ]
    }
  }
}
